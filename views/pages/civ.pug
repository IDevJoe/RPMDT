extends ../member.pug
append head
    link(rel="stylesheet" href="/static/civ.css")
    script(src="/static/civ.js")
append body
    div.banner
        div.container
            div.row
                div.col-md.tc
                    | Hello,
                    span#callsign
                div.col-md.tc.banner-middle
                    b RPMDT CIV
                div.col-md.tc
                    | Priority Timer:
                    span#ptimer
    div.container
        div.row
            div.col
                div#characters
                    div.card.charCard(style="margin-top: 50px;")
                        div.card-body
                            div.row
                                div.col
                                    h4.card-title.CVN John Johnson
                                div.col(style="text-align: right;")
                                    button.btn.btn-sm.btn-secondary View/Edit
                            | License #
                            span.CVLN 39586
                            br
                            | DOB:
                            span.CVDB  01/01/1990
                            p
                            span.CVLS(style="color: green;") VALID LICENSE
                            |  |
                            span.CVWS(style="color: green;")  NO WARRANTS
                form(action="javascript:void(0);" onsubmit="createCharacter()" style="margin-top: 50px;")
                    div.row
                        div.col
                            div.form-group
                                input.form-control#fname(type="text" placeholder="First Name")
                        div.col
                            div.form-group
                                input.form-control#lname(type="text" placeholder="Last Name")
                    div.row
                        div.col
                            div.form-group
                                input.form-control#bday(type="date" placeholder="DOB")
                        div.col
                            div.form-group
                                select.form-control#licenseStatus
                                    option(value="-1" selected disabled) License Status
                                    option Valid
                                    option Expired
                                    option Suspended
                                    option Revoked
                    div.row
                        div.col
                            div.form-group
                                select.form-control#warrantStatus
                                    option(value="-1" disabled) Warrant Status
                                    option(selected) No Warrants
                                    option Warrant Issued
                        div.col
                            div.form-group
                                input.form-control#warrantReason(type="text" placeholder="Warrant Reason" disabled)
                    button.btn.btn-primary Create Character
            div.col
                div#vehicles
                    div.card.vehicleCard(style="margin-top: 50px;")
                        div.card-body
                            div.row
                                div.col
                                    h4.card-title.VHLP 829KQJ
                                div.col(style="text-align: right;")
                                    button.btn.btn-sm.btn-secondary View/Edit
                            | Registration #
                            span.VHRN 19486
                            br
                            span.VHT Matte Black 2016 Dodge Charger
                            br
                            | Registered to
                            span.VHRT  John Johnson
                            p
                            span.VHIS(style="color: green;") INSURED
                            |  |
                            span.VHRS(style="color: green;")  VALID REGISTRATION
                form(action="javascript:void(0);" onsubmit="createVehicle()" style="margin-top: 50px;")
                    div.row
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="License Plate")
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="VIN")
                    div.row
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="Make")
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="Model")
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="Color")
                        div.col
                            div.form-group
                                input.form-control(type="text" placeholder="Year")
                    div.row
                        div.col
                            div.form-group
                                select.form-control
                                    option(value="-1" disabled selected) Registered to
                    div.row
                        div.col
                            div.form-group
                                select.form-control
                                    option(value="-1" disabled) Insurance Status
                                    option(selected) Insured
                                    option Uninsured
                                    option Expired Insurance
                        div.col
                            div.form-group
                                select.form-control
                                    option(value="-1" disabled) Registration Status
                                    option(selected) Valid Registration
                                    option Expired Registration
                    button.btn.btn-primary Create Vehicle
    img.loading-icon(src="/static/load.gif")